/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  width:100%
}

.show {
   display: block;
}
.hidden {
 display: none;
}

/*总菜单容器*/
.menu {display: block;height: 38px;}
/*一级菜单*/
.menu dt {position: absolute;
   font-size: 15px;float:left;width: 100%;height: 68px;text-align: left;background-color: #fff; color: #000;line-height: 68px;
   
}
.menu ul>li{
border-left: 1px solid #dbdbdb;
border-right: 1px solid #dbdbdb;
}
.menu ul li image{
  width: 40px;height: 40px;margin-top: 15px;margin-left: 10px;margin-right: 10px
}

.menu  li{
   font-size: 14px; line-height: 68px;color:#fff;height: 68px;display: block;border-bottom: 1px solid #dbdbdb;
}
/*二级菜单外部容器样式*/
.menu dd{ position: relative;width: 100%; z-index:999;text-align: center}
/*二级菜单普通样式*/
.menu dd li{
   font-size: 18px; line-height: 50px;color:#fff;height: 50px;display: block;
   background-color: #999;border-bottom: 1px solid #dbdbdb;
}

/*二级菜单高亮样式*/
.menu li.highlight{
   background-color: #52caed;
}